            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status, reason })
        });
        
        const result = await response.json();
        if (result.success) {
            showAlert('Estado actualizado correctamente', 'success');
            // The WebSocket will update the UI automatically
        } else {
