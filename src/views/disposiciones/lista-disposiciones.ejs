<div class="d-flex justify-content-between mb-3">
    <a href="/market/market" class="btn btn-outline-danger">Volver</a>
    <a href="/disposiciones/crear" class="btn btn-warning w-25">‚ûï Crear Disposici√≥n</a>
</div>

<div class="d-flex align-items-center flex-column mt-3">
    <div id="a√±-ag-reg" class="fs-3 p-2 fw-bold w-75">üè∑Ô∏è Disposiciones de Llamada</div>
    <div class="d-flex flex-column align-items-center w-75 pb-3 pt-2" style="background-color: var(--light-grey); border-bottom-left-radius: 25px; border-bottom-right-radius: 25px;">

        <% if (disposiciones.length === 0) { %>
            <div class="alert alert-info mt-3 w-75">
                No hay disposiciones creadas. <a href="/disposiciones/crear">Crear primera disposici√≥n</a>
            </div>
        <% } else { %>
            <!-- Agrupaci√≥n por Tipo -->
            <%
            const tiposDisposiciones = {
                'EXITOSA': { label: '‚úÖ Exitosas', color: 'success', items: [] },
                'NO_CONTACTO': { label: 'üìû No Contacto', color: 'warning', items: [] },
                'SEGUIMIENTO': { label: 'üîÑ Seguimiento', color: 'info', items: [] },
                'NO_EXITOSA': { label: '‚ùå No Exitosas', color: 'danger', items: [] }
            };

            disposiciones.forEach(d => {
                if (tiposDisposiciones[d.tipo]) {
                    tiposDisposiciones[d.tipo].items.push(d);
                }
            });
            %>

            <div class="w-75 mt-3">
                <% Object.keys(tiposDisposiciones).forEach(tipo => { %>
                    <% const grupo = tiposDisposiciones[tipo]; %>
                    <% if (grupo.items.length > 0) { %>
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <span class="badge bg-<%= grupo.color %> fs-6"><%= grupo.label %></span>
                                <small class="text-muted ms-2">(<%= grupo.items.length %>)</small>
                            </h5>

                            <div class="row g-3">
                                <% grupo.items.forEach(disposicion => { %>
                                    <div class="col-md-6">
                                        <div class="card h-100 <%= disposicion.activa ? '' : 'opacity-50' %>" style="border-left: 4px solid <%= disposicion.color %>;">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h6 class="card-title mb-0">
                                                        <span style="color: <%= disposicion.color %>; font-weight: bold;">‚óè</span>
                                                        <%= disposicion.nombre %>
                                                        <% if (disposicion.requiereCallback) { %>
                                                            <span class="badge bg-primary ms-1" title="Requiere callback">üìû</span>
                                                        <% } %>
                                                    </h6>
                                                    <span class="badge <%= disposicion.activa ? 'bg-success' : 'bg-secondary' %>">
                                                        <%= disposicion.activa ? 'Activa' : 'Inactiva' %>
                                                    </span>
                                                </div>

                                                <% if (disposicion.descripcion) { %>
                                                    <p class="card-text small text-muted mb-2"><%= disposicion.descripcion %></p>
                                                <% } %>

                                                <div class="d-flex justify-content-between align-items-center mt-2">
                                                    <small class="text-muted">Orden: <%= disposicion.orden %></small>
                                                    <div class="btn-group btn-group-sm">
                                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                            Opciones
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <li>
                                                                <a class="dropdown-item" href="/disposiciones/editar/<%= disposicion.id %>">
                                                                    ‚úèÔ∏è Editar
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" href="#" onclick="confirmarToggle('<%= disposicion.id %>', '<%= disposicion.activa %>')">
                                                                    <%= disposicion.activa ? 'üîí Desactivar' : '‚úÖ Activar' %>
                                                                </a>
                                                            </li>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <a class="dropdown-item text-danger" href="#" onclick="confirmarEliminacion('<%= disposicion.id %>')">
                                                                    üóëÔ∏è Eliminar
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<script>
    function confirmarEliminacion(id) {
        Swal.fire({
            title: '¬øEst√°s seguro?',
            text: "Esta acci√≥n eliminar√° la disposici√≥n permanentemente.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'S√≠, eliminar',
            cancelButtonText: 'Cancelar',
            confirmButtonColor: '#dc3545'
        }).then((result) => {
            if (result.isConfirmed) {
                // Crear form y enviarlo
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/disposiciones/eliminar/${id}`;
                document.body.appendChild(form);
                form.submit();
            }
        });
    }

    function confirmarToggle(id, estadoActual) {
        const nuevoEstado = estadoActual === 'true' ? 'inactiva' : 'activa';
        Swal.fire({
            title: '¬øCambiar estado?',
            text: `La disposici√≥n se marcar√° como ${nuevoEstado}.`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'S√≠, cambiar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/disposiciones/toggle/${id}`;
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>
