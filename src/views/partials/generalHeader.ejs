<header class="d-flex justify-content-between p-3 w-100" id="encabezado">
    <div class="d-flex justify-content-start align-items-center col">
        <a href="/market/market"><img src="/images/logo_enc.svg" alt="Logo" class="img-fluid w-75" id="logo_enc"></a>
        <div class=""></div>
        <span class="wake-up me-1">Wake up</span> <span class="your-clients">your clients</span>
    </div>

    <!-- Contador de Pausa -->
    <div id="contador-pausa" class="d-flex align-items-center gap-3 col">
        <span>En Pausa:</span>
        <span id="pause-timer" style="font-weight: bold;">00:00:00</span>
        <select id="pause-type" class="form-select form-select-sm" style="width: auto;">
            <option value="Baño" selected>Baño</option>
            <option value="Llamada">Llamada</option>
            <option value="Almuerzo">Almuerzo</option>
            <option value="Break">Break</option>
            <option value="Pausas Activas">Pausas Activas</option>
            <option value="Capacitación">Capacitación</option>
            <option value="Caída Aplicativos">Caída Aplicativos</option>
        </select>
        <button id="toggle-pause" class="btn btn-sm btn-warning">Pausar</button>
    </div>

    <div class="d-flex justify-content-end align-items-center gap-3 col" id="right-header">
        <div class="icono d-flex align-items-center">
            <img src="/images/notificacion.svg" alt="Mensajes" class="img-fluid">
            <div id="cont-ind">
            <span class="indicador">10</span>
            </div>
        </div>

        <img src="/images/perfil.svg" alt="Foto de Perfil" class="img-fluid">

        <div class="dropdown">
        <% if (session.usuario) { %>
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= session.usuario.nombre %>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/perfil">Mi perfil</a></li>
                <li><a class="dropdown-item" href="/logout">Cerrar sesión</a></li>
            </ul>
            <% } else { %>
                <a href="/login" class="btn btn-primary">Ingresar</a>
            <% } %>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><a class="dropdown-item" href="#">Configuracion</a></li>
                <li><a class="dropdown-item" href="#">FAQ</a></li>
            </ul>
        </div>
        
        <form action="/auth/logout" method="post">
            <button class="btn btn-danger">Cerrar Sesion</button>
        </form>
        

    </div>
</header>