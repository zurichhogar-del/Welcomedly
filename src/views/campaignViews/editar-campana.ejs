<a href="/campaign/campanas" class="btn btn-outline-danger">Volver</a>
<div class="d-flex align-items-center flex-column">
    <div id="a√±-ag-reg" class="fs-3 p-2 fw-bold w-75">üìù Editar Campa√±a</div>
    <div class="d-flex flex-column align-items-center w-75" style="background-color: var(--light-grey); border-bottom-left-radius: 25px; border-bottom-right-radius: 25px;">
    
        <div class="my-4 fs-4 fw-bold">
            Modifica la informaci√≥n de la campa√±a
        </div>

        <form action="/campaign/campanas/<%= campana.id %>/editar" method="POST" enctype="multipart/form-data" class="w-75 d-flex flex-column align-items-center gap-2">
            <div class="input-group">
                <span class="input-group-text w-25">Nombre:</span>
                <input type="text" name="nombre" class="form-control w-75" value="<%= campana.nombre %>" required>
            </div>

            <div class="input-group">
                <span class="input-group-text w-25">Base de datos (CSV):</span>
                <input type="file" name="baseDatos" accept=".csv" class="form-control w-75">
            </div>

            <% const selected = (id, campanaId) => id === campanaId ? 'selected' : '' %>

            <div class="input-group">
                <span class="input-group-text w-25">Form Venta:</span>
                <select name="formularioVenta" class="form-select w-75" required>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>" <%= selected(f.id, campana.formularioVentaId) %>><%= f.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label class="input-group-text w-25">Form No Venta:</label>
                <select name="formularioNoVenta" class="form-select w-75" required>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>" <%= selected(f.id, campana.formularioNoVentaId) %>><%= f.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label class="input-group-text w-25">Form No Contacto:</label>
                <select name="formularioNoContacto" class="form-select w-75" required>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>" <%= selected(f.id, campana.formularioNoContactoId) %>><%= f.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label class="input-group-text w-25">Form En Proceso:</label>
                <select name="formularioEnProceso" class="form-select w-75" required>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>" <%= selected(f.id, campana.formularioEnProcesoId) %>><%= f.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label class="input-group-text w-25">Form Volver a Llamar:</label>
                <select name="formularioVolverLlamar" class="form-select w-75" required>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>" <%= selected(f.id, campana.formularioVolverLlamarId) %>><%= f.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="input-group">
                <label class="input-group-text w-25">Guion:</label>
                <textarea name="guion" placeholder="Agregar Guion" class="form-control w-75"><%= campana.guion || '' %></textarea>
            </div>

            <div class="w-50 d-flex justify-content-around align-items-center m-4 gap-2">
                <a href="/campaign/campanas" class="btn btn-danger w-50">üóëÔ∏è Cancelar</a>
                <button type="submit" class="btn btn-success w-50" style="background-color: var(--corporate-mint); outline: none; border: none;">üíæ Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>