<!DOCTYPE html>
<html lang="es" class="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/css/output.css">

    <!-- Legacy Styles (for backwards compatibility) -->
    <link rel="stylesheet" href="/css/styles.css">

    <!-- Bootstrap (for legacy components) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Favicon -->
    <link rel="icon" href="/images/logo_enc.svg" type="images/svg">

    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- CSRF Token -->
    <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <% } %>

    <title><%= typeof title !== 'undefined' ? title : 'Welcomedly - Call Center Platform' %></title>

    <style>
        /* Sidebar transition */
        .sidebar-collapsed {
            width: 4rem;
        }
        .sidebar-expanded {
            width: 16rem;
        }
        @media (max-width: 768px) {
            .sidebar-mobile-hidden {
                transform: translateX(-100%);
            }
        }
    </style>
</head>

<body class="bg-gray-50 font-sans antialiased">
    <div class="flex h-screen overflow-hidden">
        <!-- Modern Sidebar -->
        <%- include('../partials/modernSidebar', { usuario: typeof usuario !== 'undefined' ? usuario : session.usuario }) %>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Modern Header -->
            <%- include('../partials/modernHeader', { usuario: typeof usuario !== 'undefined' ? usuario : session.usuario }) %>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-gray-50">
                <div class="max-w-7xl mx-auto">
                    <%- body %>
                </div>
            </main>
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden md:hidden"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Flash Messages -->
    <% if (typeof swalError !== 'undefined' && swalError) { %>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: "<%= swalError %>",
            confirmButtonColor: '#EF4444'
        });
    </script>
    <% } %>

    <% if (typeof mensajeExito !== 'undefined' && mensajeExito) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Ã‰xito',
            text: "<%= mensajeExito %>",
            confirmButtonColor: '#10B981'
        });
    </script>
    <% } %>

    <!-- CSRF Helper -->
    <script type="module" src="/js/csrfHelper.js"></script>
    <script>
        // Initialize CSRF protection
        document.addEventListener('DOMContentLoaded', function() {
            import('/js/csrfHelper.js').then(module => {
                module.initCSRFProtection();
            }).catch(err => {
                console.warn('Could not load CSRF helper:', err);
            });
        });
    </script>

    <!-- Modern Layout Scripts -->
    <script src="/js/modernLayout.js"></script>
</body>
</html>
