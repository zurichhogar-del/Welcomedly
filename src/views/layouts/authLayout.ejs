<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesion</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/static/images/logo_enc.svg" type="images/svg">
</head>
<body>
<div class="container d-flex justify-content-center" id="cont_login">

    <%- include ('../partials/authBody') %>
    
    <%- body %>
</div>

<%- include ('../partials/authFooter') %>

<!-- Scripts necesarios - CARGAR PRIMERO -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Scripts inline - EJECUTAR DESPUÉS -->
<% if (typeof swalError !== 'undefined' && swalError) { %>
<script nonce="<%= cspNonce %>">
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: "<%= swalError %>"
    });
</script>
<% } %>

<% if (typeof mensajeExito !== 'undefined' && mensajeExito) { %>
<script nonce="<%= cspNonce %>">
    Swal.fire({
        icon: 'success',
        title: 'Éxito',
        text: "<%= mensajeExito %>"
    });
</script>
<% } %>

</body>
</html>
