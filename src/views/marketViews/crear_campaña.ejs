    <a href="/market/market" class="btn btn-outline-danger">Volver</a>
    <div class="d-flex align-items-center flex-column">
        <div id="añ-ag-reg" class="fs-3 p-2 fw-bold w-75">📝 Crear Campaña</div>
        <div class="d-flex flex-column align-items-center w-75" style="background-color: var(--light-grey); border-bottom-left-radius: 25px; border-bottom-right-radius: 25px;">
        
        <div class="my-4 fs-4 fw-bold">
            Ahora vamos a crear la campaña
        </div>
            <form action="/market/crear-campana" method="POST" enctype="multipart/form-data" class="w-75 d-flex flex-column align-items-center gap-2">
                <div class="input-group">
                <span class="input-group-text w-25">Nombre:</span>
                <input type="text" name="nombre" class="form-control w-75" required>
                </div>

                <div class="input-group">
                <span class="input-group-text w-25">Base de datos (CSV):</span>
                <input type="file" name="baseDatos" accept=".csv" class="form-control w-75" required>
                </div>

                <div class="input-group">
                <span class="input-group-text w-25">Tipificaciones:</span>
                <select name="formularioVenta" class="form-select w-75" required>
                    <option value="" selected disabled>Seleccione un formulario</option>
                    <% formularios.forEach(f => { %>
                    <option value="<%= f.id %>"><%= f.nombre %></option>
                    <% }) %>
                </select>
                </div>

                <div class="input-group d-flex justify-content-between" id="campoAgentes">
                <span class="input-group-text w-25">Agentes:</span>
                <select name="agentes[]" id="agentes" multiple required>
                <% agentes.forEach(agente => { %>
                            <option value="<%= agente.id %>">
                                <%= agente.primerNombre %> <%= agente.primerApellido %> 
                            </option>
                        <% }) %>
                </select>
                </div>

                <div class="w-50 d-flex justify-content-around align-items-center m-4 gap-2">
                <a href="/market/market" class="btn btn-danger w-50">🗑️ Cancelar</a>
                <br>
                <button type="submit" class="btn btn-success w-50" style="background-color: var(--corporate-mint); outline: none; border: none;">💾 Guardar</button>
                </div>
            </form>
            
    </div>
    </div>  

    <script>
    $(document).ready(function() {
        $('#agentes').select2({
        placeholder: "Selecciona uno o más agentes",
        width:'75%',
        height:'100%',
        tags: false // true si quieres permitir nuevos tags también
        });
    });
</script>