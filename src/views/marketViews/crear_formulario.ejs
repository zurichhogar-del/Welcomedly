    <a href="/market/formularios" class="btn btn-outline-danger">Volver</a>
    <div class="d-flex align-items-center flex-column">
        <div id="añ-ag-reg" class="fs-3 p-2 fw-bold w-75">📝 Crear Formulario</div>
        <div class="d-flex flex-column align-items-center w-75" style="background-color: var(--light-grey); border-bottom-left-radius: 25px; border-bottom-right-radius: 25px;">
            <form action="/market/crear-formulario" method="POST" class="w-75 d-flex flex-column align-items-center">
                <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>

            <div class="input-group mt-3 w-100">
                <span class="input-group-text" id="inputGroup-sizing-default">Nombre del Formulario</span>
                <input type="text" id="nombre" name="nombre" class="form-control" required>
            </div>

            <div id="camposContainer" class="mt-3 w-100">
            <label class="form-label">Campos del Formulario</label>
                <div class="input-group mb-2 w-100">
                    <input type="text" name="campos[]" class="form-control" placeholder="Nuevo campo" required>
                    <button type="button" class="btn btn-danger" onclick="eliminarCampo(this)">🗑️</button>
                </div>
            </div>

            <div class="w-50 d-flex justify-content-around align-items-center m-4 gap-2">
            <button type="button" class="btn btn-warning w-50" onclick="agregarCampo()">➕ Agregar Campo</button>
            <br>
            <button type="submit" class="btn btn-success w-50" style="background-color: var(--corporate-mint); outline: none; border: none;">💾 Continuar</button>
            </div>
        </form>
        </div>
</div>


<script type="module">
    import { createElementSecure } from '/js/sanitize.js';

    function agregarCampo() {
        const container = document.getElementById('camposContainer');
        const grupo = createElementSecure('div', { class: 'input-group mb-2' });

        // Crear input de forma segura
        const input = createElementSecure('input', {
            type: 'text',
            name: 'campos[]',
            class: 'form-control',
            placeholder: 'Nuevo campo',
            required: ''
        });

        // Crear botón de forma segura
        const boton = createElementSecure('button', {
            type: 'button',
            class: 'btn btn-danger',
            onclick: 'eliminarCampo(this)'
        }, '🗑️');

        grupo.appendChild(input);
        grupo.appendChild(boton);
        container.appendChild(grupo);
    }

    function eliminarCampo(boton) {
        const grupo = boton.parentElement;
        grupo.remove();
    }
</script>