# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nombre_base_datos
DB_USER=usuario_postgres
DB_PASSWORD=contraseña_segura

# PostgreSQL Replication (Opcional - Fase 4.2)
# Dejar vacío para usar solo primary database
DB_REPLICA1_HOST=
DB_REPLICA1_PORT=5433
DB_REPLICA2_HOST=
DB_REPLICA2_PORT=5434
REPLICATION_PASSWORD=replicator_password

# Redis (Fase 4.1 - Clustering)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Servidor
PORT=3000
NODE_ENV=development
INSTANCE_ID=standalone
CORS_ORIGIN=http://localhost:3000

# Seguridad
# Genera un secreto aleatorio con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=tu_secreto_aleatorio_de_al_menos_32_caracteres

# OpenAI (Opcional - para funciones de IA)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
